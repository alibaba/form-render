{
  "schema": {
    "type": "object",
    "properties": {
      "input": {
        "title": "简单输入框",
        "type": "string",
        "min": 6,
        "rules": [
          {
            "pattern": "^[A-Za-z0-9]+$",
            "message": "只允许填写英文字母和数字"
          }
        ]
      },
      "select": {
        "title": "单选",
        "type": "string",
        "enum": ["a", "b", "c"],
        "enumNames": ["选项1", "选项2", "选项3"],
        "widget": "radio"
      }
    }
  }
}
